{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@gamedev-test-task/board": ["game-model/board/src/index.ts"],
      "@gamedev-test-task/board-item": ["game-model/item/src/index.ts"],
      "@gamedev-test-task/direction": ["game-model/direction/src/index.ts"],
      "@gamedev-test-task/game-model": ["game-model/game/src/index.ts"],
      "@gamedev-test-task/game-options": ["game-model/options/src/index.ts"],
      "@gamedev-test-task/game-store": ["game-store/src/index.ts"],
      "@gamedev-test-task/user-target": ["game-model/target/src/index.ts"],
      "@gamedev-test-task/xy-key": ["game-model/xy-key/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
